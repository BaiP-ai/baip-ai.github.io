---
import Layout from '../layouts/Layout.astro';
import Hero3D from '../components/Hero3D';
import AnimatedAIResponse from '../components/AnimatedAIResponse';
import ServicesTimeline from '../components/ServicesTimeline';
import ApproachSection from '../components/ApproachSection';
import WhyBaiP from '../components/WhyBaiP';
import FAQSection from '../components/FAQSection'; // Changed from TeamSection
import ContactModalTrigger from '../components/ContactModalTrigger';
import AILogoChip from '../components/AILogoChip';
---

<Layout title="Boston AI Partners - Responsible AI Solutions">
  <!-- Hero Section -->
  <section id="hero" class="min-h-screen flex items-center relative overflow-hidden py-32">
    <Hero3D client:load />
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-5xl md:text-7xl font-display font-bold mb-4">
            <span class="bg-gradient-to-r from-blue-400 to-primary bg-clip-text text-transparent">
              Empowering the future with responsible AI
            </span>
          </h1>
          <p class="text-xl md:text-2xl text-light/80 mb-8">
            At Boston AI Partners, we're building the next generation of AI products and services that turn complex challenges into opportunities.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="#services" class="cta-button">Explore Our Services</a>
            <a href="#contact-trigger" class="px-6 py-3 rounded-full border border-light/20 hover:border-light/40 transition-all">
              Learn More
            </a>
          </div>
        </div>
        
        <div>
          <AnimatedAIResponse client:load />
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#about" class="text-light/50 hover:text-light transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </section>
  
  <!-- About Section - Redesigned with improved UI -->
  <section id="about" class="py-20 md:py-32 relative overflow-hidden">
    <!-- Background subtle gradient -->
    <div class="absolute inset-0 bg-gradient-to-br from-white via-blue-50/30 to-white"></div>
    
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-primary/5 blur-[100px] rounded-full"></div>
    <div class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-secondary/5 blur-[80px] rounded-full"></div>
    
    <!-- Decorative circuit lines -->
    <div class="absolute top-20 left-10 w-[300px] h-[300px] opacity-10">
      <svg viewBox="0 0 300 300" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="150" cy="150" r="120" stroke="currentColor" stroke-width="1" stroke-dasharray="8 8" class="text-primary" />
        <circle cx="150" cy="150" r="80" stroke="currentColor" stroke-width="1" class="text-secondary" />
      </svg>
    </div>
    <div class="absolute bottom-20 right-10 w-[200px] h-[200px] opacity-10">
      <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect x="40" y="40" width="120" height="120" stroke="currentColor" stroke-width="1" class="text-primary" />
        <circle cx="100" cy="100" r="60" stroke="currentColor" stroke-width="1" stroke-dasharray="4 4" class="text-secondary" />
      </svg>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Heading with gradient line -->
      <div class="flex flex-col items-center text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-display font-bold text-dark mb-4">
          About <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Boston AI Partners</span>
        </h2>
        <div class="h-1 w-20 bg-gradient-to-r from-primary to-secondary rounded-full"></div>
      </div>
      
      <!-- Content with cards -->
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Mission Card -->
        <div class="glass-panel p-8 rounded-2xl border border-primary/10 shadow-lg transform transition-all duration-300 hover:-translate-y-1 hover:shadow-primary/20">
          <div class="mb-6">
            <div class="w-14 h-14 rounded-full bg-gradient-to-r from-primary/10 to-primary/20 flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
            </div>
            <h3 class="text-2xl font-display font-bold text-dark mb-2">Our Mission</h3>
          </div>
          <p class="text-gray-700">
            We believe AI should be transparent, ethical, and powerfulâ€”fueling innovation across industries while respecting people and data.
          </p>
        </div>
        
        <!-- Approach Card -->
        <div class="glass-panel p-8 rounded-2xl border border-secondary/10 shadow-lg transform transition-all duration-300 hover:-translate-y-1 hover:shadow-secondary/20">
          <div class="mb-6">
            <div class="w-14 h-14 rounded-full bg-gradient-to-r from-secondary/10 to-secondary/20 flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <h3 class="text-2xl font-display font-bold text-dark mb-2">Our Approach</h3>
          </div>
          <p class="text-gray-700">
            At BaiP, we're focused on building practical AI solutions that solve real-world problems, starting with our flagship product for global education and expanding to enterprise AI services.
          </p>
        </div>
        
        <!-- Team Card -->
        <div class="glass-panel p-8 rounded-2xl border border-blue-400/10 shadow-lg transform transition-all duration-300 hover:-translate-y-1 hover:shadow-blue-400/20">
          <div class="mb-6">
            <div class="w-14 h-14 rounded-full bg-gradient-to-r from-blue-400/10 to-blue-400/20 flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <h3 class="text-2xl font-display font-bold text-dark mb-2">Our Team</h3>
          </div>
          <p class="text-gray-700">
            Our team combines deep technical expertise with business acumen to deliver AI systems that drive measurable value while adhering to the highest standards of responsible development.
          </p>
        </div>
      </div>
      
      <!-- Feature showcase -->
      <div class="mt-16 glass-panel-dark p-8 md:p-10 rounded-2xl border border-white/10">
        <div class="grid md:grid-cols-2 gap-10 items-center">
          <div>
            <h3 class="text-3xl font-display font-bold text-white mb-6">The Boston AI Advantage</h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <div class="p-1 bg-gradient-to-r from-primary to-secondary rounded-full mr-3 mt-1.5">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">Ethical AI Development</h4>
                  <p class="text-light/80">Committed to responsible AI that respects privacy, reduces bias, and operates transparently.</p>
                </div>
              </li>
              <li class="flex items-start">
                <div class="p-1 bg-gradient-to-r from-primary to-secondary rounded-full mr-3 mt-1.5">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">Enterprise-Ready Solutions</h4>
                  <p class="text-light/80">Scalable architecture designed for integration with your existing systems and workflows.</p>
                </div>
              </li>
              <li class="flex items-start">
                <div class="p-1 bg-gradient-to-r from-primary to-secondary rounded-full mr-3 mt-1.5">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div>
                  <h4 class="text-lg font-bold text-white mb-1">Innovation-Focused</h4>
                  <p class="text-light/80">Continuously developing cutting-edge AI capabilities that push technological boundaries.</p>
                </div>
              </li>
            </ul>
          </div>
          
          <!-- AI logo animation -->
          <div class="flex justify-center items-center">
            <div class="relative">
              <div class="animate-float">
                <div class="w-64 h-64 rounded-full bg-primary/10 backdrop-blur-sm flex items-center justify-center">
                  <div class="w-48 h-48 rounded-full bg-primary/20 backdrop-blur-sm flex items-center justify-center">
                    <div class="w-36 h-36 rounded-xl bg-gradient-to-br from-primary to-secondary shadow-xl flex items-center justify-center">
                      <AILogoChip client:load size="90" />
                    </div>
                  </div>
                </div>
              </div>
              <!-- Decorative element -->
              <div class="absolute -bottom-4 -right-4 w-24 h-24 rounded-full bg-blue-400/10 backdrop-blur-md border border-white/10"></div>
              <div class="absolute -top-4 -left-4 w-16 h-16 rounded-full bg-secondary/10 backdrop-blur-md border border-white/10"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Section - Completely redesigned -->
  <section id="services" class="py-20 md:py-32 bg-dark/80 relative overflow-hidden">
    <!-- Background particle animation -->
    <div class="absolute inset-0 particle-container">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
    </div>
    
    <!-- Decorative gradients -->
    <div class="absolute top-0 left-0 w-full h-1/3 bg-gradient-to-b from-primary/20 to-transparent opacity-20 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-1/2 h-1/2 bg-secondary/20 blur-3xl rounded-full opacity-20"></div>
    
    <!-- Bottom gradient border -->
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-secondary/30 to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Section heading with animated typing effect -->
      <div class="mb-16">
        <h2 class="section-heading text-center mb-4">What We Do</h2>
        <p class="text-center text-light/80 max-w-2xl mx-auto">
          Our AI solutions combine cutting-edge technology with practical business applications to deliver measurable results.
        </p>
      </div>
      
      <div class="mt-12">
        <!-- Important: Use client:only here to ensure it only renders on client -->
        <ServicesTimeline client:only="solid-js" />
      </div>
    </div>
  </section>
  
  <!-- Approach Section -->
  <section id="approach" class="py-20 md:py-32 relative">
    <ApproachSection client:visible />
  </section>
  
  <!-- Why BaiP Section -->
  <section id="why" class="py-20 md:py-32 bg-dark/80 relative">
    <div class="container mx-auto px-4">
      <h2 class="section-heading text-center">Why BaiP</h2>
      
      <WhyBaiP client:visible />
    </div>
  </section>
  
  <!-- FAQ Section - Replaced TeamSection -->
  <section id="faq" class="py-20 md:py-32 relative bg-white">
    <!-- Top border gradient -->
    <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <FAQSection client:visible />
    </div>
    
    <!-- Bottom border gradient -->
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-secondary/30 to-transparent"></div>
  </section>
  
  <!-- Contact Trigger Section -->
  <section id="contact-trigger" class="py-20 md:py-32 relative bg-dark/80">
    <div class="container mx-auto px-4 text-center">
      <h2 class="section-heading">Let's Build the Future of AIâ€”Together</h2>
      <p class="text-xl max-w-3xl mx-auto mb-12 text-light/80">
        Are you a university agency, enterprise leader, or investor looking to harness AI responsibly? Let's talk.
      </p>
      
      <ContactModalTrigger client:load>
        <button class="cta-button">Contact Us</button>
      </ContactModalTrigger>

      <div class="mt-12">
        <p class="text-light/60 text-sm">Or connect with us on</p>
        <div class="flex justify-center space-x-6 mt-3">
          <!-- LinkedIn -->
          <a 
            href="https://www.linkedin.com/company/baip-ai/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-light/80 hover:text-primary transition-colors" 
            aria-label="LinkedIn"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          
          <!-- GitHub -->
          <a 
            href="https://github.com/BaiP-ai" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-light/80 hover:text-primary transition-colors" 
            aria-label="GitHub"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          
          <!-- X (Twitter) -->
          <a 
            href="https://x.com/BAIP_AI" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-light/80 hover:text-primary transition-colors" 
            aria-label="X (Twitter)"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
          
          <!-- YouTube -->
          <a 
            href="https://www.youtube.com/@BAIP-AI" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-light/80 hover:text-primary transition-colors" 
            aria-label="YouTube"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
