---
import Layout from '../layouts/Layout.astro';
import Hero3D from '../components/Hero3D';
import AnimatedAIResponse from '../components/AnimatedAIResponse';
import ServicesTimeline from '../components/ServicesTimeline';
import ApproachSection from '../components/ApproachSection';
import WhyBaiP from '../components/WhyBaiP';
import FAQSection from '../components/FAQSection'; // Changed from TeamSection
import ContactModalTrigger from '../components/ContactModalTrigger';
---

<Layout title="Boston AI Partners - Responsible AI Solutions">
  <!-- Hero Section -->
  <section id="hero" class="min-h-screen flex items-center relative overflow-hidden py-32">
    <Hero3D client:load />
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-5xl md:text-7xl font-display font-bold mb-4">
            <span class="bg-gradient-to-r from-blue-400 to-primary bg-clip-text text-transparent">
              Empowering the future with responsible AI
            </span>
          </h1>
          <p class="text-xl md:text-2xl text-light/80 mb-8">
            At Boston AI Partners, we're building the next generation of AI products and services that turn complex challenges into opportunities.
          </p>
          <div class="flex flex-wrap gap-4">
            <a href="#services" class="cta-button">Explore Our Services</a>
            <a href="#contact-trigger" class="px-6 py-3 rounded-full border border-light/20 hover:border-light/40 transition-all">
              Learn More
            </a>
          </div>
        </div>
        
        <div>
          <AnimatedAIResponse client:load />
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a href="#about" class="text-light/50 hover:text-light transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
  </section>
  
  <!-- About Section -->
  <section id="about" class="py-20 md:py-32 relative">
    <div class="container mx-auto px-4">
      <div class="glass-panel p-8 md:p-12 max-w-6xl mx-auto">
        <h2 class="section-heading">About Boston AI Partners</h2>
        <div class="grid md:grid-cols-2 gap-12">
          <div>
            <p class="text-xl mb-6">
              We believe AI should be transparent, ethical, and powerful—fueling innovation across industries while respecting people and data.
            </p>
            <p class="mb-6">
              At BaiP, we're focused on building practical AI solutions that solve real-world problems, starting with our flagship product for global education and expanding to enterprise AI services.
            </p>
            <p>
              Our team combines deep technical expertise with business acumen to deliver AI systems that drive measurable value while adhering to the highest standards of responsible development.
            </p>
          </div>
          <div class="relative flex items-center justify-center">
            <div class="w-64 h-64 rounded-full bg-primary/10 backdrop-blur-sm flex items-center justify-center animate-float">
              <div class="w-48 h-48 rounded-full bg-primary/20 backdrop-blur-sm flex items-center justify-center">
                <div class="w-32 h-32 rounded-full bg-gradient-to-br from-primary to-secondary shadow-lg flex items-center justify-center">
                  <span class="text-4xl font-display font-bold">BaiP</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Section - Fixed the unwanted horizontal line issue -->
  <section id="services" class="py-20 md:py-32 bg-dark/80 relative overflow-hidden">
    <!-- Background particles effect -->
    <div class="absolute inset-0 particle-container">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
    </div>
    
    <!-- Removed the top gradient line that was causing the issue -->
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-secondary/30 to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <!-- Fixing the heading styling to avoid horizontal line above it -->
      <div class="mb-16">
        <h2 class="section-heading text-center mb-4">What We Do</h2>
        <p class="text-center text-light/80 max-w-2xl mx-auto">
          Our AI solutions evolve with emerging technologies and market needs, delivering value at every stage of development.
        </p>
      </div>
      
      <div class="mt-12">
        <ServicesTimeline client:visible />
      </div>
    </div>
  </section>
  
  <!-- Approach Section -->
  <section id="approach" class="py-20 md:py-32 relative">
    <ApproachSection client:visible />
  </section>
  
  <!-- Why BaiP Section -->
  <section id="why" class="py-20 md:py-32 bg-dark/80 relative">
    <div class="container mx-auto px-4">
      <h2 class="section-heading text-center">Why BaiP</h2>
      
      <WhyBaiP client:visible />
    </div>
  </section>
  
  <!-- FAQ Section - Replaced TeamSection -->
  <section id="faq" class="py-20 md:py-32 relative bg-white">
    <!-- Top border gradient -->
    <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-primary/30 to-transparent"></div>
    
    <div class="container mx-auto px-4 relative z-10">
      <FAQSection client:visible />
    </div>
    
    <!-- Bottom border gradient -->
    <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-secondary/30 to-transparent"></div>
  </section>
  
  <!-- Contact Trigger Section -->
  <section id="contact-trigger" class="py-20 md:py-32 relative bg-dark/80">
    <div class="container mx-auto px-4 text-center">
      <h2 class="section-heading">Let's Build the Future of AI—Together</h2>
      <p class="text-xl max-w-3xl mx-auto mb-12 text-light/80">
        Are you a university agency, enterprise leader, or investor looking to harness AI responsibly? Let's talk.
      </p>
      
      <ContactModalTrigger client:load>
        <button class="cta-button">Contact Us</button>
      </ContactModalTrigger>

      <div class="mt-12">
        <p class="text-light/60 text-sm">Or connect with us on</p>
        <div class="flex justify-center space-x-6 mt-3">
          <a href="https://www.linkedin.com/company/boston-ai-partners/" target="_blank" class="text-light/80 hover:text-primary transition-colors" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href="https://x.com/baip_ai" target="_blank" class="text-light/80 hover:text-primary transition-colors" aria-label="Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
