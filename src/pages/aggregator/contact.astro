---
import AggregatorLayout from '../../layouts/AggregatorLayout.astro';
import AggregatorHero from '../../components/AggregatorHero.jsx';
import { getSitePath } from '../../utils/paths.js';
---

<AggregatorLayout title="Contact Us - BAIP.AI">
  <AggregatorHero 
    title="Let's Connect" 
    subtitle="We'd love to hear from you. Get in touch with our team to discuss your AI needs."
    showSearch={false}
  />
  
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Main Contact Card -->
        <div class="w-full rounded-2xl mb-12">
          <div class="relative z-10 p-6 md:p-8 rounded-2xl bg-gradient-to-br from-gray-900/80 via-gray-900/70 to-gray-900/50 backdrop-blur-lg border border-white/10 shadow-2xl">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 -z-10 w-2/3 h-1/2 bg-blue-600/20 blur-[80px] rounded-full"></div>
            <div class="absolute bottom-0 right-1/4 -z-10 w-1/2 h-1/3 bg-purple-600/20 blur-[60px] rounded-full"></div>
            
            <h3 class="text-2xl md:text-3xl font-bold mb-6 text-white text-center bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
              Let's Connect
            </h3>
            <p class="text-center text-white/80 mb-8">
              We'd love to hear from you. Reach out to discuss your AI needs and explore how we can help.
            </p>
            
            <div class="text-center mb-8">
              <a 
                href="mailto:contact@BaiP.ai"
                class="inline-flex justify-center items-center min-h-[48px] rounded-xl bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-500 hover:to-purple-500 text-white font-medium text-lg transition-all duration-500 group overflow-hidden relative px-8 py-3"
              >
                <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-purple-600 opacity-0 group-hover:opacity-100 blur-xl transition-opacity duration-1000"></div>
                
                <span class="relative z-10 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  Contact Us
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </span>
              </a>
            </div>

            <div class="pt-6 border-t border-white/10 text-center">
              <p class="text-white/60 text-sm mb-4">
                Or reach us directly at <a href="mailto:contact@BaiP.ai" class="text-blue-400 hover:underline">contact@BaiP.ai</a>
              </p>
              
              <!-- Social media links matching main website -->
              <div class="flex justify-center space-x-4 mt-3">
                <!-- LinkedIn -->
                <a 
                  href="https://www.linkedin.com/company/baip-ai/" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center text-white/80 hover:bg-blue-600/20 hover:text-blue-400 transition-all shadow-sm"
                  aria-label="LinkedIn"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
                
                <!-- GitHub -->
                <a 
                  href="https://github.com/BaiP-ai" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center text-white/80 hover:bg-blue-600/20 hover:text-blue-400 transition-all shadow-sm"
                  aria-label="GitHub"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
                
                <!-- YouTube -->
                <a 
                  href="https://www.youtube.com/@BAIP-AI" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center text-white/80 hover:bg-blue-600/20 hover:text-blue-400 transition-all shadow-sm"
                  aria-label="YouTube"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
                  </svg>
                </a>
                
                <!-- X (Twitter) -->
                <a 
                  href="https://x.com/BAIP_AI" 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="w-8 h-8 rounded-full bg-white/10 flex items-center justify-center text-white/80 hover:bg-blue-600/20 hover:text-blue-400 transition-all shadow-sm"
                  aria-label="X (Twitter)"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Information Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Contact Information -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600 dark:text-blue-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Get in Touch</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Ready to transform your business with AI? Our team of experts is here to help.
            </p>
            <div class="space-y-2 text-sm">
              <p><strong>Email:</strong> contact@BaiP.ai</p>
              <p><strong>Response Time:</strong> Within 24 hours</p>
            </div>
          </div>
          
          <!-- Enterprise Focus -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600 dark:text-purple-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Enterprise Solutions</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Specialized AI tools and services designed for Fortune 500 companies and large organizations.
            </p>
            <ul class="text-sm space-y-1">
              <li>• Custom AI implementations</li>
              <li>• Enterprise integrations</li>
              <li>• Compliance & security</li>
            </ul>
          </div>
          
          <!-- Research & Development -->
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900 rounded-lg flex items-center justify-center mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600 dark:text-green-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold mb-3">Innovation Partners</h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">
              Collaborate with us on cutting-edge AI research and development projects.
            </p>
            <ul class="text-sm space-y-1">
              <li>• University partnerships</li>
              <li>• Research collaborations</li>
              <li>• Innovation consulting</li>
            </ul>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="mt-12 text-center">
          <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-8">
            <h3 class="text-2xl font-bold mb-4 text-blue-900 dark:text-blue-100">Ready to Get Started?</h3>
            <p class="text-blue-800 dark:text-blue-200 mb-6 max-w-2xl mx-auto">
              Whether you're looking to implement AI tools, develop custom solutions, or explore research partnerships, we're here to help you navigate the future of artificial intelligence.
            </p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
              <a 
                href="mailto:contact@BaiP.ai?subject=Enterprise AI Inquiry" 
                class="btn btn-primary px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg"
              >
                Start a Conversation
              </a>
              <a 
                href={getSitePath('/enterprise')} 
                class="btn px-6 py-3 border-2 border-blue-600 text-blue-600 hover:bg-blue-600 hover:text-white font-semibold rounded-lg transition-colors"
              >
                Learn About Enterprise
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</AggregatorLayout>
