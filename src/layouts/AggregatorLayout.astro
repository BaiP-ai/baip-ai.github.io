---
import '../styles/aggregator.css';
import Navbar from '../components/Navbar.jsx';
import Footer from '../components/Footer.jsx';

const { 
  title = 'Enterprise AI Tools Directory | AI Aggregator for Fortune 500 Companies', 
  description = 'Comprehensive directory of enterprise-ready AI tools and platforms. Compare the best AI solutions for business transformation, productivity, and automation. Trusted by Fortune 500 companies.',
  keywords = 'enterprise AI tools, AI software directory, business AI solutions, AI tools comparison, Fortune 500 AI tools, enterprise AI platforms, AI software for business, AI tool aggregator, enterprise artificial intelligence, AI solutions marketplace',
  canonicalUrl = 'https://www.baip.ai/aggregator',
  ogImage = '/images/ai-aggregator-og.jpg'
} = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';

// Structured data for AI Aggregator
const aggregatorSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "BAIP AI Aggregator",
  "alternateName": "Enterprise AI Tools Directory",
  "url": canonicalUrl,
  "description": description,
  "publisher": {
    "@type": "Organization",
    "name": "Boston AI Partners",
    "url": "https://www.baip.ai"
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": `${canonicalUrl}/search?q={search_term_string}`
    },
    "query-input": "required name=search_term_string"
  }
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <meta name="keywords" content={keywords} />
  <meta name="robots" content="index, follow" />
  <meta name="author" content="Boston AI Partners" />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={canonicalUrl} />
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="website" />
  <meta property="og:site_name" content="BAIP AI Aggregator" />
  
  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />
  <meta name="twitter:site" content="@BAIP_AI" />
  
  <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
  <title>{title} | BAIP.AI</title>
  
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(aggregatorSchema)} />
  
  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-CD3V675MMR"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', 'G-CD3V675MMR');
  </script>
  
  <!-- Simple path handling script -->
  <script define:vars={{baseUrl}}>
    // Set base path for assets
    window.BASE_PATH = baseUrl;
  </script>
  
  <!-- Load the path fixer script -->
  <script src={`${baseUrl}js/base-path.js`}></script>
</head>
<body class="bg-light dark:bg-dark min-h-screen flex flex-col">
  <Navbar />
  <main class="flex-grow container mx-auto px-4 py-8">
    <slot />
  </main>
  <Footer />
</body>
</html>
