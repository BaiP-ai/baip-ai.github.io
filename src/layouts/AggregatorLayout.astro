---
import '../styles/aggregator.css';
import Navbar from '../components/Navbar.jsx';
import Footer from '../components/Footer.jsx';

const { title = 'AI Aggregator for Fortune 500 Companies', description = 'A comprehensive platform for discovering enterprise-ready AI tools' } = Astro.props;
const baseUrl = import.meta.env.BASE_URL || '/';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href={`${baseUrl}favicon.svg`} />
  <title>{title} | BAIP.AI</title>
  
  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-CD3V675MMR"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', 'G-CD3V675MMR');
  </script>
  
  <!-- Simple path handling script -->
  <script define:vars={{baseUrl}}>
    // Set base path for assets
    window.BASE_PATH = baseUrl;
  </script>
  
  <!-- Load the path fixer script -->
  <script src={`${baseUrl}js/base-path.js`}></script>
</head>
<body class="bg-light dark:bg-dark min-h-screen flex flex-col">
  <Navbar />
  <main class="flex-grow container mx-auto px-4 py-8">
    <slot />
  </main>
  <Footer />
</body>
</html>
